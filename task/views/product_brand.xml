<?xml version="1.0" encoding="utf-8"?>

<odoo>
    <data>

        <record id="product_view" model="ir.ui.view">
            <field name="name">product.view.form</field>
            <field name="model">product.brand</field>
            <field name="arch" type="xml">
                <form string="Product Brand">
                    <sheet>
                        <group>
                            <field name="name" string="Product Brand"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="product_view_tree" model="ir.ui.view">
            <field name="name">product.view.tree</field>
            <field name="model">product.brand</field>
            <field name="arch" type="xml">
                <tree string="Product Bran">
                    <field name="name"/>
                </tree>
            </field>
        </record>

        <record id="product_brand_action" model="ir.actions.act_window">
            <field name="name">product view</field>
            <field name="res_model">product.brand</field>
            <field name="view_mode">tree,form</field>
        </record>

    </data>
</odoo>

